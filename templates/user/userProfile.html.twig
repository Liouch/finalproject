{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="row justify-content-center mt-5">
    <div class="col-10 col-sm-7 col-lg-4">
        <h1 class="h3 mb-3 font-weight-normal text-center">Your profile {{user.name}}</h1>
    </div>
</div>
<div class="row justify-content-center mt-5">
    <div class="col-10 col-sm-7 col-lg-4">
        <form action="{{ path('EditUser') }}" method="post">
            
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" id="name" value={{user.name}} required>
                <a href="http://finalproject.test/register/teacher" class="btn btn-secondary col-12 col-lg-7 col-xl-5 mt-3 my-sm-3">Become a teacher</a>   
                <button class="btn btn-primary col-12 col-sm-12 col-lg-4 float-sm-right my-2 my-sm-3" type="submit">Update</button>
            
            <input type="hidden" name="idUser" value="{{user.id}}">
        </form>
    </div>
</div>
{% endblock %}
