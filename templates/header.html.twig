{% block stylesheets %}
<link rel="stylesheet" href="/css/header.css">
{% endblock %}
{% block header %}
<nav class="navbar navbar-expand-lg navbar-light bg-light header header-fix">
  <a class="navbar-brand" href="{{ path('index') }}"><img src="/img/logo/Linwah.png" height="45"/></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      
      <li class="nav-item">
        <a class="nav-link" href="{{path('AlLessonRequest')}}">Ads</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Teachers</a>
      </li>
    </ul>
    
    {% if is_granted ('IS_AUTHENTICATED_FULLY') %}
      {% set name = app.user.name %}
      <ul class="navbar-nav">
      <li class="nav-item" >
          <a class="nav-link" href="{{path('AlLessonRequestOwnedByUser')}}" >My Ads</a>
      </li>
      <li class="nav-item" >
          <a class="nav-link" href="{{path('AllMessages')}}" >Messages</a>
      </li>
    </ul>
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          {{ name }}
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton" style="z-index:1000000">
        {% set userRole = app.user.idrole.id %}
        {% if userRole == 1 %}
            <a class="dropdown-item" href="/usuario">Perfil</a>
            <a class="dropdown-item" href="/admin">Check Ads</a> 
        {% elseif userRole == 2 %}
            <a class="dropdown-item" href="{{ path('profileUser')}}">Perfil</a>
        {% elseif userRole == 3 %}
            <a class="dropdown-item" href="{{ path('profileTeacher')}}">Perfil</a>
        {% endif %}
          <a class="dropdown-item" href="/logout">Logout</a>
          {% if is_granted('ROLE_USER') %}
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="{{ path('signUpTeacher')}}">Become a teacher</a>
          {% endif %}
        </div>
      </div>
      {% else %}
      <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" href="{{ path('signUpUser')}}">Sign up</a></li>
        <li class="nav-item active"><a class="nav-link" href="/login">Login</a></li>
      </ul>
      {% endif %}
  </div>
</nav>
{% endblock %}